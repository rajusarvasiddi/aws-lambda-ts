{
  "name": "lambda-express-api",
  "version": "1.0.0",
  "description": "AWS Lambda function with Express and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\"  \"nodemon dist/index.js\""
  },
  "dependencies": {
    "@types/aws-serverless-express": "^3.3.9",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.16",
    "concurrently": "^7.4.0",
    "express": "^4.18.1",
    "rimraf": "^3.0.2",
    "serverless": "^4.4.5",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.19"
  }
}
