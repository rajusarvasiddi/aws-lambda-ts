{
  "name": "lambda-express-api",
  "version": "1.0.0",
  "description": "AWS Lambda function with Express and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "package": "cd dist && zip -r ../deployment-package.zip .",
    "deploy": "npm run build && npm run package && aws lambda update-function-code --function-name my-typescript-lambda --zip-file fileb://handler.zip --publish"
  },
  "dependencies": {
    "aws-lambda": "^1.0.0",
    "aws-serverless-express": "^3.3.8",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/aws-serverless-express": "^3.3.8",
    "@types/express": "^4.17.21",
    "@types/node": "^16.11.7",
    "esbuild": "^0.24.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
